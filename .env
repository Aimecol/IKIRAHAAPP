# IKIRAHA Flutter App Environment Configuration

# Application Environment
APP_ENV=development
APP_NAME=IKIRAHA
APP_VERSION=1.0.0

# API Configuration
# Development (Local XAMPP)
API_BASE_URL=http://localhost/ikirahaapp/ikiraha-api/public
API_TIMEOUT=30

# Alternative API URLs for different environments
# API_BASE_URL=http://192.168.1.100/ikirahaapp/ikiraha-api/public  # Local network
# API_BASE_URL=https://api.ikiraha.rw/v1                           # Production
# API_BASE_URL=https://staging-api.ikiraha.rw/v1                   # Staging

# Authentication Configuration
JWT_STORAGE_KEY=ikiraha_auth_token
JWT_REFRESH_KEY=ikiraha_refresh_token
USER_DATA_KEY=ikiraha_user_data

# App Configuration
DEFAULT_LANGUAGE=en
DEFAULT_CURRENCY=RWF
DEFAULT_COUNTRY_CODE=+250

# Debug Configuration
ENABLE_LOGGING=true
LOG_LEVEL=debug
ENABLE_API_LOGGING=true

# Feature Flags
ENABLE_BIOMETRIC_AUTH=false
ENABLE_SOCIAL_LOGIN=false
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_ANALYTICS=false

# Network Configuration
RETRY_ATTEMPTS=3
RETRY_DELAY=1000
CONNECTION_TIMEOUT=10000
RECEIVE_TIMEOUT=30000

# Cache Configuration
CACHE_DURATION=300000
ENABLE_OFFLINE_MODE=false

# Security Configuration
ENABLE_CERTIFICATE_PINNING=false
ENABLE_ROOT_DETECTION=false

# UI Configuration
THEME_MODE=light
PRIMARY_COLOR=0xFF5722
SECONDARY_COLOR=0xFF9800

# Development Tools
ENABLE_DEV_TOOLS=true
SHOW_DEBUG_BANNER=false
ENABLE_HOT_RELOAD=true
